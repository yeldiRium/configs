# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym i resize shrink width 10 px or 10 ppt
        bindsym a resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym e resize grow width 10 px or 10 ppt

        bindsym $mod+i resize shrink width 50 px or 50 ppt
        bindsym $mod+a resize grow height 50 px or 50 ppt
        bindsym $mod+l resize shrink height 50 px or 50 ppt
        bindsym $mod+e resize grow width 50 px or 50 ppt

        bindsym Shift+i resize shrink width 100 px or 100 ppt
        bindsym Shift+a resize grow height 100 px or 100 ppt
        bindsym Shift+l resize shrink height 100 px or 100 ppt
        bindsym Shift+e resize grow width 100 px or 100 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

mode "workspace" {
	bindsym u workspace $tag1
	bindsym i workspace $tag2
	bindsym a workspace $tag3
	bindsym e workspace $tag4
	bindsym o workspace $tag5
	bindsym s workspace $tag6
	bindsym n workspace $tag7
	bindsym r workspace $tag8
	bindsym t workspace $tag9
	bindsym d workspace $tag10

	bindsym Shift+u move container to workspace $tag1
	bindsym Shift+i move container to workspace $tag2
	bindsym Shift+a move container to workspace $tag3
	bindsym Shift+e move container to workspace $tag4
	bindsym Shift+o move container to workspace $tag5
	bindsym Shift+s move container to workspace $tag6
	bindsym Shift+n move container to workspace $tag7
	bindsym Shift+r move container to workspace $tag8
	bindsym Shift+t move container to workspace $tag9
	bindsym Shift+d move container to workspace $tag10

	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym $mod+n mode "default"
}
bindsym $mod+n mode "workspace"


